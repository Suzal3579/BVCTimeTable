<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_semester_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.pramesh.bvctimetable.SemesterSelect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true">

    </RelativeLayout>

    <Button
        android:text="Second Sem"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textColor="@color/whiteStroke"
        android:background="@drawable/buttonshape"
        android:layout_alignBottom="@+id/section_a"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:id="@+id/section_b" />

    <TextView
        android:text="Designed by - Pramesh Bajracharya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:text="First Sem"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/whiteStroke"
        android:id="@+id/section_a"
        android:layout_marginStart="33dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp" />

</RelativeLayout>

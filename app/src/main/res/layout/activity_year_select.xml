<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.pramesh.bvctimetable.YearSelect">


    <Button
        android:id="@+id/firstYear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:gravity="right|center"
        android:paddingRight="20dp"
        android:background="@drawable/bulletbutton"
        android:text="First Year"
        android:rotation="-20"
        android:textColor="@color/whiteStroke"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/forthYear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbulletreverse"
        android:text="Forth Year"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:rotation="-20"
        android:textColor="@color/whiteStroke"
        android:textSize="16sp"
        android:layout_below="@+id/thirdYear"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/secondYear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:background="@drawable/buttonbulletreverse"
        android:text="Second Year"
        android:textColor="@color/whiteStroke"
        android:textSize="16sp"
        android:rotation="-20"
        android:layout_below="@+id/firstYear"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/thirdYear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:background="@drawable/bulletbutton"
        android:text="Third Year"
        android:gravity="right|center"
        android:paddingRight="20dp"
        android:textColor="@color/whiteStroke"
        android:textSize="16sp"
        android:rotation="-20"
        android:layout_below="@+id/secondYear"
        android:layout_alignParentStart="true" />


</RelativeLayout>

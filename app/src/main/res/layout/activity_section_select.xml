<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_section_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.pramesh.bvctimetable.SectionSelect">

    <Button
        android:text="Section A"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textColor="@color/whiteStroke"
        android:id="@+id/section_a"
        android:layout_marginStart="-80dp"
        android:gravity="right|center"
        android:paddingRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape" />

    <Button
        android:text="Section B"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textColor="@color/whiteStroke"
        android:id="@+id/section_b"
        android:gravity="left|center"
        android:paddingLeft="25dp"
        android:layout_marginEnd="-80dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonshape"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Section C"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textColor="@color/whiteStroke"
        android:id="@+id/section_c"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/section_a"
        android:layout_toStartOf="@+id/button6"
        android:layout_marginEnd="8dp" />

</RelativeLayout>
